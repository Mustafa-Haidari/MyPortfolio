   <%- include("../partials/header") %>


   <section class="blogs section">

       <div class="blogs__container container grid">
           <h4 class="section__title">Blogs</h4>
           <span class="section__subtitle">This blogs section is a demonstration of CRUD operations linking frontend to the MongoDB backend with basic insert, read, update and delete operations.</span>

           <% blogs.forEach(blog => { %>
           <div class="blog__container flex">
               <i class="uil uil-diamond blog__icon"></i>
               <div>
                   <a href="/blogs/<%= blog._id %>"><h3 class="blog__title"><%= blog.title %> by <%= blog.name %></h3></a>
                   
                   <p class="blog__body"><%= blog.body.substring(0,100) %>...</p>
               </div>

           </div>
           <% }) %>

           <div class="goback__buttons">
               <a href="/blogs/new" class="button button--flex">
                   New Blog
               </a>
           </div>

       </div>
       </div>
   </section>



   <%- include("../partials/footer") %>