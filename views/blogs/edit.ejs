<%- include("../partials/blogs-header") %>

<div class="container mt-5">
    

    <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">


        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="blog[name]" value="<%= blog.name %>">
          </div>
          
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="blog[title]" value="<%= blog.title %>">
          </div>

          <div class="mb-3">
            <label for="body" class="form-label">Example textarea</label>
            <textarea class="form-control" id="body" name="blog[body]" rows="5"><%= blog.body %></textarea>
          </div>

        <button class="btn btn-success">Update Blog</button>

    </form>
    <a class="btn btn-light"href="/blogs/<%= blog._id %>">Back to Blog</a>

</div>

    <%- include("../partials/blogs-footer") %>